                                    <a href="<%= results_url(token: @token, employee_id: @employee.id, company_survey_id: @survey.id, offered_question_id: @survey.offered_questions.first.id, offered_answer_id: answer.id) %>" style="background:url(<%= image_url('bg01.png') %>) no-repeat; color:#343838; text-decoration:none; width:60px; height:60px; display:inline-block; vertical-align:top;"><%= answer.value %></a>
