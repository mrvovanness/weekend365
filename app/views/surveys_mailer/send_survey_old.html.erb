                                  <td style="font:21px Arial, Helvetica, sans-serif; line-height:25px; margin:0 0 15px; padding:0 20px; color:#ffffff;" ><%= @survey.offered_questions.first.title %></td>
                                </tr>
                              </table>
                            </td>
                          </tr>
												<tr>
													<td height="35"></td>
												</tr>
												<tr>
													<td align="center">
														<table  cellpadding="0" cellspacing="0" style="text-align:center;">
															<tr>
