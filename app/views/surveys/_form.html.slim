.panel.panel-heading
.panel-body
= simple_form_for survey do |f|
  = f.input :title

  = f.input :start_on, as: :string,
    wrapper_html: { class: 'form-inline' }

  = f.input :start_at, as: :string, wrapper_html: { class: 'form-inline' }

  = f.input :repeat, inline_label: 'Repeat?'

  = f.input :finish_on, as: :string, wrapper_html: { class: 'form-inline' }

  = f.input :repeat_mode,
    collection: [['weeks', 'w'], ['days', 'd']],
    include_blank: false,
    default: 1,
    wrapper_html: { class: 'form-inline' }

  = f.input :repeat_every, collection: 1..12,
    label: 'repeat_every(weeks/days)',
    wrapper_html: { class: 'form-inline' },
    include_blank: false,
    default: 1

  = f.input :number_of_repeats, collection: 1..12,
    wrapper_html: { class: 'form-inline' },
    include_blank: false,
    default: 1

  = f.input :message, label: 'Message to employee'

  = f.input :employee_ids, collection: survey.company.employees.order(:name),
    label: 'Send to',
    input_html: { multiple: true },
    include_blank: false

  = f.simple_fields_for :questions do |q|
    = q.input :id, as: :hidden unless q.object.new_record?
    = q.input :title, label: 'Question Title' 

  = f.submit
